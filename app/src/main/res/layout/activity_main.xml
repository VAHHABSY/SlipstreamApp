<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Command Runner Configuration"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp" />

    <!-- IP Address Input -->
    <EditText
        android:id="@+id/ip_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter IP Address (e.g., 8.8.8.8)"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="16dp" />

    <!-- Domain Input -->
    <EditText
        android:id="@+id/domain_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Domain Name (e.g., example.com)"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="16dp" />

    <!-- Button to start the service -->
    <Button
        android:id="@+id/start_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Service"
        android:backgroundTint="#4CAF50"
        android:padding="14dp"
        android:layout_marginBottom="16dp" />

    <!-- Button to stop the service -->
    <Button
        android:id="@+id/stop_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Service"
        android:backgroundTint="#F44336"
        android:padding="14dp" />

    </LinearLayout>
