<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:padding="16dp"
                                                   tools:context=".MainActivity">

    <!-- Title: Ensures text contrast for dark themes -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Slipstream Tunnel Configuration"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Switch for Tunnel On/Off -->
    <Switch
        android:id="@+id/tunnel_switch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Turn Tunnel On/Off"
        android:checked="false"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Input 1: Resolver IP Address -->
    <EditText
        android:id="@+id/ip_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Resolver IP Address (e.g., 1.1.1.1)"
        android:inputType="textUri"
        android:minHeight="48dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tunnel_switch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Input 2: Domain Name -->
    <EditText
        android:id="@+id/domain_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Domain Name (e.g., example.com)"
        android:inputType="textUri"
        android:minHeight="48dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/ip_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Status Section Title - Now connects directly below domain_input -->
    <TextView
        android:id="@+id/status_section_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Status"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/domain_input"
        app:layout_constraintStart_toStartOf="parent"
        />

    <!-- Slipstream Status Row -->
    <TextView
        android:id="@+id/slipstream_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slipstream Client:"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/status_section_title"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/slipstream_status_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="-"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/slipstream_label"
        app:layout_constraintTop_toTopOf="@id/slipstream_label"
        app:layout_constraintBottom_toBottomOf="@id/slipstream_label"
        />

    <TextView
        android:id="@+id/slipstream_status_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Stopped"
        app:layout_constraintStart_toEndOf="@id/slipstream_status_indicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/slipstream_label"
        app:layout_constraintBottom_toBottomOf="@id/slipstream_label"
        />

    <!-- SSH Status Row -->
    <TextView
        android:id="@+id/ssh_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SSH Tunnel:"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/slipstream_label"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/ssh_status_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="-"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/ssh_label"
        app:layout_constraintTop_toTopOf="@id/ssh_label"
        app:layout_constraintBottom_toBottomOf="@id/ssh_label"
        />

    <TextView
        android:id="@+id/ssh_status_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Stopped"
        app:layout_constraintStart_toEndOf="@id/ssh_status_indicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ssh_label"
        app:layout_constraintBottom_toBottomOf="@id/ssh_label"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
